<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="content_button_next">
        <item name="android:onClick">next</item>
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:text">继续</item>
    </style>

    <style name="content_textview_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#5A5A5C</item>
    </style>

</resources>